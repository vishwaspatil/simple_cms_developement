 <%= link_to "<< back to list" , {:action => 'index'}, :class => 'back_link' %>


 <div class="section edit">
 	<h2>update sections</h2>
 	<%= form_for(:sections, :url => { :action => 'update', :id => @sections.id } ) do |f| %>
 		<table summary="Subject form field">
 			<tr>
 				<th><%= f.label :page_id, "Page Id" %></th>
 				<td><%= f.text_field(:page_id) %></td>
 			</tr>
 			<tr>
 				<th><%= f.label :name, "Name" %></th>
 				<td><%= f.text_field(:name) %></td>
 			</tr>
 			<tr>
 				<th><%= f.label :position, "Position" %></th>
 				<td> <%= f.select(:position, 1..@section_count) %> </td>
 			</tr>
 			<tr>
 				<th><%= f.label :visible, "Visible" %></th>
 				<td><%= f.check_box(:visible) %></td>
 			</tr>
 			<tr>
 				<th><%= f.label :content_type, "Content _Type" %></th>
 				<td><%= f.radio_button :content_type, :text %>Text </td> 
 				<td><%= f.radio_button :content_type, :HTML %>HTML </td> 
 			</tr>
 			<tr>
 				<th><%= f.label :content, "Content" %></th>
 				<td><%= f.text_area :content %></td>
 			</tr>
 		</table>
 		<div class="form buttons">
 			<%= submit_tag("update Section")%>
 		</div>
 	<% end %>
 </div>