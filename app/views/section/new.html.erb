 
 <%= link_to "<< back to list" , {:action => 'index'}, :class => 'back_link' %>
 <div class="section new">
 	<h2>Create section</h2>
 	<%= form_for(:sections, :url => { :action => 'create' } ) do |f| %>
 		<table summary="Section form field">
 			<tr>
 				<th>page Id</th>
 				<td><%= f.text_field(:page_id) %></td>
 			</tr>
 			<tr>
 				<th>Name</th>
 				<td><%= f.text_field(:name) %></td>
 			</tr>
 			<tr>
 				<th>position</th>
 				<td><%= f.text_field(:position) %></td>
 			</tr>
 			<tr>
 				<th>Visible</th>
 				<td><%= f.text_field(:visible) %></td>
 			</tr>
 			<tr>
 				<th>content_type</th>
 				<td><%= f.text_field(:content_type) %></td>
 			</tr>
 			<tr>
 				<th>content</th>
 				<td><%= f.text_field(:content) %></td>
 			</tr>
 		</table>
 		<div class="form buttons">
 			<%= submit_tag("Create section")%>
 		</div>
 	<% end %>
 </div>