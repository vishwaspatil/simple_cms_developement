<% text= "this is some long sample text.it includes line breaks\n 
			and double line breaks .\n\n 
			it ranmbles on and on and on.\n\n 
			untill we grt to last line" %>
<h2>word_wrap</h2>
<%= word_wrap(text, :line_width => 30) %>
<hr>

<h2>simple_format</h2>
<%= simple_format(text) %>
<hr>

<h2>simple_format+word_wrap</h2>
<%= simple_format(word_wrap(text, :line_width => 30)) %>
<hr>

<h2>truncate</h2>
<%= truncate(text, :length => 40, :omission => "*****")%>
<hr>

<h2>excerpt</h2>
<%= excerpt(text, 'includes', :radious => 7,:omission => "..." )%>
<hr>

<h2>highlight</h2>
<%= highlight(text, 'sample text')%>
<hr>

<h2>highlight</h2>
<%= highlight(text, ['sample text','ranmbles'],:highlighter => '<em>/1<em>')%>
<hr>

<h2>pluralize</h2>
<%= "student".pluralize%>
<%= "ox".pluralize %>
<br>
<%= pluralize(2,'student')%>
<br>
<% [0,1,20].each do |n| %>
	<%= pluralize(n,'product') %><br>
	<%= pluralize(n,'octopus')%> <br>
	<%= pluralize(n,'snipe','snope')%><br> 
<%end%>
<hr>
<h2>cycle</h2>
<% 5.times do%>
<%= cycle('red','green','blue')%><br>

<%end%>